<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/aqua"
        tools:context=".OpenActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/elysspacemoon">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/getsunupdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:onClick="getsunupdates"
                android:text="@string/getsunupdates" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/gpstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/aqua"
            android:focusable="false"
            android:textSize="24sp"
            android:minWidth="96dp"
            android:text="gps"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/suntimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/aqua"
            android:focusable="false"
            android:textSize="24sp"
            android:minWidth="96dp"
            android:text="sunrise\nsunrise"
            android:singleLine="false"
            android:textIsSelectable="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/dayornight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/aqua"
            android:focusable="false"
            android:textSize="24sp"
            android:minWidth="96dp"
            android:text=""
            android:textIsSelectable="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/startupdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:onClick="startgpsupdates"
                android:text="@string/startupdates"/>
            <Button
                android:id="@+id/stopupdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:onClick="stopgpsupdates"
                android:text="@string/stopupdates"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
